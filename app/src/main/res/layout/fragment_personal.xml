<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="個人頁面"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_assignment_ind_black_24dp" />

                    <Button
                        android:id="@+id/btn_hire_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="left|center_vertical"
                        android:text="收藏紀錄"
                        android:background="#00000000"
                        android:textColor="@color/fontDark"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_message_black_24dp" />

                    <Button
                        android:id="@+id/btn_contact_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="聯絡紀錄"
                        android:textColor="@color/fontDark" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_volume_up_black_24dp" />

                    <Switch
                        android:id="@+id/switch_notice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:text="系統通知"
                        android:textColor="@color/fontDark"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/txt_font"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_phone_in_talk_black_24dp" />

                    <Button
                        android:id="@+id/btn_return"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="回報問題"
                        android:textColor="@color/fontDark" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_info_black_24dp" />

                    <Button
                        android:id="@+id/btn_about"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="關於我們"
                        android:textColor="@color/fontDark" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_library_books_black_24dp" />

                    <Button
                        android:id="@+id/btn_specification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="相關規範"
                        android:textColor="@color/fontDark" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/txt_font"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_swap_horiz_black_24dp" />

                    <Button
                        android:id="@+id/btn_change"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="身分切換"
                        android:textColor="@color/fontDark" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_person_pin_black_24dp" />

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="登入"
                        android:textColor="@color/fontDark" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_person_add_black_24dp" />
                    <Button
                        android:id="@+id/btn_reg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="註冊"
                        android:textColor="@color/fontDark" />

                </LinearLayout>





            </LinearLayout>
        </ScrollView>




    </LinearLayout>


</LinearLayout>